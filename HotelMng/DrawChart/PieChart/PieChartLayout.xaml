<UserControl x:Class="HotelMng.DrawChart.PieChart.PieChartLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:HotelMng.DrawChart.PieChart"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <c:PiePlotter Margin="10" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" 
                          HoleSize="0.3"/>
            <c:Legend Margin="10" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" />
        </StackPanel>


    </Grid>
</UserControl>
