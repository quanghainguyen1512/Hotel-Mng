<Page x:Class="HotelMng.Pages.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:local="clr-namespace:HotelMng.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="ServicesPage">

    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ServicesPage}}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DataGrid Grid.Column="0" 
                  ItemsSource="{Binding Services}"
                  Name="DgServices"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="All"
                  IsReadOnly="True">
            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Path=Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Expander IsExpanded="True">
                                            <Expander.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#CFD8DC" Offset="1"/>
                                                    <GradientStop Color="#78909C" Offset="0"/>
                                                </LinearGradientBrush>
                                            </Expander.Background>
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="30,0,0,0">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontSize="18" 
                                                               FontWeight="DemiBold"
                                                               Foreground="White"/>
                                                    <StackPanel VerticalAlignment="Center"
                                                                Orientation="Horizontal">
                                                        <TextBlock Text=" (" Foreground="White"/>
                                                        <TextBlock Text="{Binding ItemCount}" Foreground="White"/>
                                                        <TextBlock Text=") " Foreground="White"/>
                                                        <TextBlock Text="Item(s)" Foreground="White"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Expander.Header>
                                            <ItemsPresenter />
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                    <GroupStyle.Panel>
                        <ItemsPanelTemplate>
                            <DataGridRowsPresenter/>
                        </ItemsPanelTemplate>
                    </GroupStyle.Panel>
                </GroupStyle>
            </DataGrid.GroupStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên dịch vụ"
                                    Width="1.5*"
                                    Binding="{Binding Name}" 
                                    FontSize="16"/>
                <DataGridTextColumn Header="Đơn giá" 
                                    Width="0.5*"
                                    Binding="{Binding Price}"
                                    FontSize="16"/>
                <DataGridTextColumn Header="Đơn vị"
                                    Width="0.5*"
                                    Binding="{Binding Unit}" 
                                    FontSize="16"/>
                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="ButtonEditItem_OnClick"
                                    Width="25"
                                    Margin="5,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <Rectangle Width="10" Height="10">
                                            <Rectangle.Fill>
                                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_edit}"/>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="ButtonDelItem_OnClick"
                                    Width="25"
                                    Margin="5,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <Rectangle Width="10" Height="10">
                                            <Rectangle.Fill>
                                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_axis_x_letter}"/>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Column="1" Background="{StaticResource ToolBoxBrush}">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Margin" Value="5,20"/>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Margin" Value="0,0,10,0"/>
                    <Setter Property="Padding" Value="3"></Setter>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên:"/>
            <TextBox Name="TxtName" 
                     VerticalAlignment="Center"
                     Grid.Row="0" Grid.Column="1" />
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Loại:"/>
            <Grid Grid.Row="1" Grid.Column="1"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox ItemsSource="{Binding ServiceTypes}" 
                          DisplayMemberPath="SvTypeName"
                          SelectedIndex="1"
                          FontSize="14"
                          Name="CbbSvType"/>
                <Button Grid.Column="1"
                        Width="30"
                        Height="30"
                        Style="{DynamicResource MetroCircleButtonStyle}"
                        ToolTip="Danh sách "
                        Click="AddServiceTypeInfo_OnClick"
                        Background="WhiteSmoke">
                    <Rectangle Width="5"
                               Height="12">
                        <Rectangle.Fill>
                            <VisualBrush Stretch="Fill"
                                         Visual="{StaticResource appbar_information}" />
                        </Rectangle.Fill>
                    </Rectangle>
                </Button>
            </Grid>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Đơn giá:"/>
            <mah:NumericUpDown Grid.Row="2" Grid.Column="1"
                               Value="1000"
                               HorizontalContentAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               Interval="1000"
                               Minimum="1000"
                               Name="NumUpDownPrice"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Đơn vị"/>
            <TextBox Grid.Row="3" Grid.Column="1"
                     Name="TxtUnit"/>
            <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                        VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Name="ButtonAdd" Grid.Column="1"
                        Content="Thêm" Margin="10,16"
                        Click="ButtonAdd_OnClick"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
