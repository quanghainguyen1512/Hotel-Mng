<mah:MetroWindow x:Class="HotelMng.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
                 xmlns:local="clr-namespace:HotelMng"
                 xmlns:sys="clr-namespace:System;assembly=mscorlib"
                 xmlns:uc="clr-namespace:HotelMng.Assets.UserControls"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:hamburgerMenu="clr-namespace:HamburgerMenu;assembly=hamburgerMenu"
                 mc:Ignorable="d"
                 Title="MainWindow" Height="700" Width="1000" 
                 WindowState="Maximized"
                 WindowStyle="None"
                 ShowTitleBar="False"
                 ShowMaxRestoreButton="False" 
                 ShowMinButton="False">
    <DockPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}}">
        <DockPanel.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="Assets/Styles/HomePageResources.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </DockPanel.Resources>
        <TabControl Style="{DynamicResource StyleTabControl}">
            <TabItem Style="{DynamicResource StyleTabItemLeft}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="25" Style="{StaticResource StyleHeaderIcon}">
                            <Rectangle.Fill>
                                <VisualBrush Visual="{StaticResource HomeIcon}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="TRANG CHỦ" Style="{StaticResource StyleHeaderText}"/>
                    </StackPanel>
                </TabItem.Header>
                
                <Grid>
                    <GroupBox Style="{StaticResource StyleGroupBox}">
                        <GroupBox.Header>
                            <TextBlock Text="Danh sách phòng"
                                       FontSize="20"
                                       Margin="25,0"></TextBlock>
                        </GroupBox.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.5*"/>
                                <RowDefinition Height="5*"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Grid.Row="0"
                                        Height="Auto">
                                <TextBlock Text="Tình trạng phòng:"
                                           Margin="20,0"
                                           FontSize="13"
                                           VerticalAlignment="Center"
                                           FontWeight="DemiBold"
                                           FontStyle="Italic"/>
                                <uc:RoomStatusItem StatusBrush="{StaticResource RoomNeedsCleaningBrush}"
                                                   StatusText="Cần dọn"
                                                   Margin="45,0,0,0"/>
                                <uc:RoomStatusItem StatusBrush="{StaticResource RentedRoomBrush}"
                                                   StatusText="Có khách"
                                                   Margin="45,0,0,0"/>
                                <uc:RoomStatusItem StatusBrush="{StaticResource EmptyRoomBrush}"
                                                   StatusText="Phòng trống"
                                                   Margin="45,0,0,0"/>
                                <uc:RoomStatusItem StatusBrush="{StaticResource RoomNeedsFixingBrush}"
                                                   StatusText="Cần sửa"
                                                   Margin="45,0,0,0"/>
                            </StackPanel>
                            <ScrollViewer Grid.Row="1">
                                <ItemsControl ItemsSource="{Binding Rooms}">
                                    <ItemsControl.GroupStyle>
                                        <GroupStyle>
                                            <GroupStyle.HeaderTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Path=Name}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GroupStyle.HeaderTemplate>
                                            <GroupStyle.ContainerStyle>
                                                <Style TargetType="{x:Type GroupItem}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                                <Expander IsExpanded="True">
                                                                    <Expander.Background>
                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                            <GradientStop Color="#CFD8DC" Offset="1"/>
                                                                            <GradientStop Color="#78909C" Offset="0"/>
                                                                        </LinearGradientBrush>
                                                                    </Expander.Background>
                                                                    <Expander.Header>
                                                                        <StackPanel Orientation="Horizontal"
                                                                                    Margin="30,0,0,0">
                                                                            <TextBlock Text="{Binding Name}" 
                                                                                       FontSize="18" 
                                                                                       FontWeight="DemiBold"
                                                                                       Foreground="White"/>
                                                                            <StackPanel VerticalAlignment="Center"
                                                                                        Orientation="Horizontal">
                                                                                <TextBlock Text=" (" Foreground="White"/>
                                                                                <TextBlock Text="{Binding ItemCount}" Foreground="White"/>
                                                                                <TextBlock Text=") " Foreground="White"/>
                                                                                <TextBlock Text="Item(s)" Foreground="White"/>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </Expander.Header>
                                                                    <ItemsPresenter />
                                                                </Expander>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </GroupStyle.ContainerStyle>
                                            <GroupStyle.Panel>
                                                <ItemsPanelTemplate>
                                                    <DataGridRowsPresenter/>
                                                </ItemsPanelTemplate>
                                            </GroupStyle.Panel>
                                        </GroupStyle>

                                    </ItemsControl.GroupStyle>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <mah:Tile Title="{Binding RoomId}"
                                                      Margin="10"
                                                      Height="100"
                                                      Width="100">
                                                <mah:Tile.Content>
                                                    <StackPanel>
                                                        <Image Source="Assets/Icon/roomitem-icon.png" Height="30" Width="60"/>
                                                        <TextBlock Text="{Binding RoomId}" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </mah:Tile.Content>
                                            </mah:Tile>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                            </ScrollViewer>
                            <StackPanel Grid.Row="2" 
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock Text="Thời gian khách hàng muốn ở:"
                                           Margin="20,0,10,0"
                                           FontSize="13"
                                           VerticalAlignment="Center"
                                           FontWeight="DemiBold"
                                           FontStyle="Italic"/>
                                <mah:DateTimePicker Name="TimePicker" 
                                                    Width="200"
                                                    Margin="100,0"
                                                    SelectedDate="{x:Static sys:DateTime.Now}"
                                                    SelectedDateChanged="TimePicker_OnSelectedDateChanged"/>
                                <Button Margin="200,0"
                                        Content="Tải lại danh sách"
                                        Style="{StaticResource StyleButtonReload}">
                                </Button>
                            </StackPanel>

                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Style="{DynamicResource StyleTabItemDefault}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="20" Style="{StaticResource StyleHeaderIcon}">
                            <Rectangle.Fill>
                                <VisualBrush Visual="{StaticResource appbar_cogs}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="QUẢN LÝ" Style="{StaticResource StyleHeaderText}"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <hamburgerMenu:HamburgerMenu Grid.Column="0"  
                                                 MenuIconColor="White" 
                                                 SelectionIndicatorColor="White" 
                                                 MenuItemForeground="White" 
                                                 HorizontalAlignment="Left"
                                                 IsOpen="True"
                                                 Background="{StaticResource ToolBoxBrush}">
                        <hamburgerMenu:HamburgerMenuItem Text="Quản lý phòng" 
                                                         Icon="Assets/Icon/appbar.key.png"
                                                         Tag="Pages/RoomMngPage.xaml"
                                                         Selected="HamburgerMenuItem_OnSelected"/>
                        <hamburgerMenu:HamburgerMenuItem Text="Danh sách dịch vụ"
                                                         Icon="Assets/Icon/appbar.social.delicious.png"
                                                         Tag="Pages/ServicesPage.xaml"
                                                         Selected="HamburgerMenuItem_OnSelected"/>
                        <hamburgerMenu:HamburgerMenuItem Text="Danh sách khách hàng" 
                                                         Icon="Assets/Icon/appbar.people.png"
                                                         Tag="Pages/RentersPage.xaml"
                                                         Selected="HamburgerMenuItem_OnSelected"/>
                    </hamburgerMenu:HamburgerMenu>
                    <Frame Grid.Column="1"
                           x:Name="Frame"
                           NavigationUIVisibility="Hidden"/>
                </Grid>
            </TabItem>
            <TabItem Style="{DynamicResource StyleTabItemDefault}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <!--<Image Source="Assets/Icon/report-icon-white.png" Style="{StaticResource StyleHeaderImage}"/>-->
                        <Rectangle Width="15" Style="{StaticResource StyleHeaderIcon}">
                            <Rectangle.Fill>
                                <VisualBrush Visual="{StaticResource ReportIcon}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="BÁO CÁO" Style="{StaticResource StyleHeaderText}"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem Style="{DynamicResource StyleTabItemRight}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="20" Style="{StaticResource StyleHeaderIcon}">
                            <Rectangle.Fill>
                                <VisualBrush Visual="{StaticResource appbar_information_circle}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="THÔNG TIN" Style="{StaticResource StyleHeaderText}"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </DockPanel>
</mah:MetroWindow>

 

